# CELL 1: Import libraries
import csv
import statistics

# CELL 2: Load data
data = []
with open('data/spending_data.csv', 'r') as file:
    reader = csv.DictReader(file)
    for row in reader:
        data.append(row)

print(f"Total transactions: {len(data)}")
print(f"First 5 rows:")
for i in range(5):
    print(data[i])

# CELL 3: Calculate total spending
amounts = [float(row['Amount']) for row in data]
total_spending = sum(amounts)
average_spending = statistics.mean(amounts)
median_spending = statistics.median(amounts)

print(f"\nðŸ“Š SPENDING STATISTICS:")
print(f"Total Spending: ${total_spending:.2f}")
print(f"Average Transaction: ${average_spending:.2f}")
print(f"Median Transaction: ${median_spending:.2f}")

# CELL 4: Spending by category
categories = {}
for row in data:
    category = row['Category']
    amount = float(row['Amount'])
    if category in categories:
        categories[category] += amount
    else:
        categories[category] = amount

print(f"\nðŸ’° SPENDING BY CATEGORY:")
for category, total in sorted(categories.items(), key=lambda x: x[1], reverse=True):
    percentage = (total / total_spending) * 100
    print(f"{category}: ${total:.2f} ({percentage:.1f}%)")

# CELL 5: Monthly spending
months = {}
for row in data:
    month = row['Date'][:7]  # Extract YYYY-MM
    amount = float(row['Amount'])
    if month in months:
        months[month] += amount
    else:
        months[month] = amount

print(f"\nðŸ“… SPENDING BY MONTH:")
for month, total in sorted(months.items()):
    print(f"{month}: ${total:.2f}")

# CELL 6: Insights
highest_category = max(categories.items(), key=lambda x: x[1])
print(f"\nðŸ’¡ KEY INSIGHTS:")
print(f"âœ“ Your highest spending category is {highest_category[0]} (${highest_category[1]:.2f})")
print(f"âœ“ You spent an average of ${average_spending:.2f} per transaction")
print(f"âœ“ Total tracked spending: ${total_spending:.2f}")
